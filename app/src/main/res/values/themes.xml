<resources>
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="BaseUnityTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar.Fullscreen">
    </style>

    <style name="UnityThemeSelector" parent="@style/BaseUnityTheme">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    <style name="UnityThemeSelector.Translucent" parent="@style/UnityThemeSelector">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:foregroundTint">@android:color/transparent</item>
    </style>

    <style name="ShapeableImageView_theme" parent="">

    </style>

</resources>
